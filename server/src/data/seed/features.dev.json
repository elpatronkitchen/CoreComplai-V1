{
  "classification": {
    "enabled": true,
    "topN": 3,
    "minConfidence": 0.65,
    "autoAcceptThreshold": 0.85,
    "vetoes": [
      {
        "rule": "casual_no_annualised",
        "description": "Casual employees cannot be classified with annualised salary arrangements",
        "applies_to": ["casual"]
      },
      {
        "rule": "apprentice_award_required",
        "description": "Apprentices must be classified under relevant Modern Award",
        "applies_to": ["apprentice", "trainee"]
      },
      {
        "rule": "fixed_term_end_date",
        "description": "Fixed-term contracts must have defined end date",
        "applies_to": ["fixed_term", "maximum_term"]
      }
    ]
  },
  "evidenceMatching": {
    "enabled": true,
    "autoAttachThreshold": 0.75,
    "weights": {
      "obligation_match": 0.50,
      "term_match": 0.20,
      "period_overlap": 0.15,
      "integration_type": 0.10,
      "recency": 0.05
    }
  },
  "anomalyDetection": {
    "enabled": true,
    "detectors": ["sg_mismatch", "stp_recon", "payslip_sla"],
    "thresholds": {
      "sg_variance_percent": 2.0,
      "stp_tolerance_days": 3,
      "payslip_sla_hours": 48
    }
  },
  "reviewerWorkflow": {
    "enabled": true,
    "queues": ["my_queue", "awaiting_approval", "returned", "auto_ready"],
    "batchValidationLimit": 50,
    "roiTracking": true
  }
}
